# ============================================================
# Docker Compose Environment Variables
# Copie este arquivo para .env e ajuste os valores
# ============================================================

# PostgreSQL Configuration
POSTGRES_DB=your_database_name
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_secure_password_here

# MongoDB Configuration
MONGO_INITDB_DATABASE=your_database_name

# JWT Configuration (m√≠nimo 256 bits - use: openssl rand -base64 64)
JWT_SECRET=generate_secure_secret_minimum_256_bits_use_openssl_rand_base64_64
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Airflow Configuration
AIRFLOW_DB=airflow_database_name
AIRFLOW_USER=airflow_user
AIRFLOW_PASSWORD=airflow_secure_password
AIRFLOW_FERNET_KEY=generate_fernet_key_use_python_cryptography_fernet
AIRFLOW_WWW_USER_USERNAME=airflow_admin_user
AIRFLOW_WWW_USER_PASSWORD=airflow_admin_password
